<%= form_for @listing do |form| %>
<div class="text-field">
  <%= form.label :list_name %>
  <%= form.text_field :list_name%>
</div>

<div class="text-field">
  <%= form.label :property_type %>
  <%= select( "listing", "property_type", {"Condo" => 1, "Services Apartment" => 2, "Landed Property" => 3}) %>
</div>

<div class="text-field">
  <%= form.label :room_type %>
  <%= select( "listing", "room_type", {"Private Room" => 1, "Shared Room" => 2, "Entire Home/Apt" => 3}) %>

</div>

<div class="text-field">
  <%= form.label :city %>
  <%= form.text_field :city%>
</div>

<div class="text-field">
  <%= form.label :location %>
  <%= form.text_field :location%>
</div>

<div class="text-field">
  <%= form.label :capacity %>
  <%= form.text_field :capacity%>
</div>
<div class="text-field">
  <%= form.label :price,'RM' %>
  <%= form.text_field :price%>
</div>
<div class="check-box">
 <%= form.collection_check_boxes(:amenity_ids, Amenity.all, :id, :name) %>
 </div>
 <%= form.file_field :avatars, multiple: true %>
 <%= form.submit 'list now' %>
<%end%>
